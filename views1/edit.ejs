<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('layouts/includes/header.ejs')%>
  </head>
  <body>
    <%- include('layouts/includes/navigation.ejs')%> <% if(probs.length>0 ) {%>
    <main class="display_product_card">
      <% for(let product of probs) {%>
      <div class="product-card">
        <img
          src="<%= product.imageUrl%>"
          alt="Avatar"
          class="product-card-img"
        />
        <div class="product-card-content">
          <h4 class="product-card-title heading"><b><%= product.title%></b></h4>
          <p><%= product.description%></p>
        </div>
        <div class="product-card-btn">
          <a href="/edit-data/<%= product._id%>"
            ><button class="product-card-submit">Edit</button></a
          >
          <a href="/delete-data/<%= product._id%>"
            ><button class="product-card-submit">Delete</button></a
          >
        </div>
      </div>
      <% } %>
    </main>
    <% } %>
  </body>
</html>
