<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('layouts/includes/header.ejs')%>
  </head>
  <body>
    <%- include('layouts/includes/navigation.ejs')%> <%-
    include('layouts/includes/category-navi.ejs')%>
    <br />
    <%- include('layouts/includes/slideshow.ejs')%><br />
    <% if(probs.length>0 ) {%>
    <main class="display_product_card">
      <% for(let product of probs) {%>
      <div class="product-card">
        <img
          src="<%= product.imageUrl%>"
          alt="Avatar"
          class="product-card-img"
        />
        <div class="product-card-content">
          <h4 class="product-card-title heading"><b><%= product.title%></b></h4>
          <p><%= product.description%></p>
        </div>
        <div class="product-card-btn">
          <a href="/details/<%= product._id%>"
            ><button class="product-card-submit">Details</button></a
          >
          <a href="/add-to-cart/<%= product._id%>"
            ><button class="product-card-submit">Add to cart</button></a
          >
        </div>
      </div>
      <% } %>
    </main>
    <% } %>
    <br /><br />
    <%- include('layouts/includes/footer.ejs')%>
  </body>
</html>
