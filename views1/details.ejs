<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('layouts/includes/header.ejs')%>
  </head>
  <body>
    <%- include('layouts/includes/navigation.ejs')%>
    <main>
      <div class="card-details">
        <img
          src="<%= prob.imageUrl%>"
          alt="Avatar"
          class="product-card-img"
          width="200"
          height="200"
        />
        <div class="product-card-content">
          <h4 class="product-card-title heading"><b><%= prob.title%></b></h4>
          <p><%= prob.description%></p>
          <div class="product-card-price">Price: Rs. <%=prob.price %> only</div>
        </div>
      </div>
    </main>
  </body>
</html>
